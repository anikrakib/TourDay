<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.EditProfile">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <!-- body  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bio"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bio"
                android:textColor="@color/color_secondary_text"
                android:textSize="14sp" />

            <EditText
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="4dp"
                android:background="#14FFFFFF"
                android:gravity="left"
                android:minHeight="50dp"
                android:text="@string/bio"
                android:textColor="@color/color_third_text"
                android:textSize="18sp"
                android:theme="@style/cutomTextstyle"
                tools:ignore="RtlHardcoded" />

        </LinearLayout>

        <!--  UserName   -->
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/id_UsernameTitle_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textColor="@color/color_secondary_text"
                android:textSize="12sp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/id_Username_TextView"
                android:layout_marginTop="16dp"
                android:text="Mohammed Alsudane"
                android:textColor="@color/color_primary_text"
                android:textSize="16sp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/id_Usernamee_EditText"
                android:layout_marginTop="16dp"
                android:text="anikrakib"
                android:textColor="@color/color_primary_text"
                android:visibility="gone"
                android:textSize="16sp" />
        </LinearLayout>


        <!--  Email   -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_marginTop="18dp"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/id_EmailTitle_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="@color/color_secondary_text"
                android:textSize="12sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/id_Email_TextView"
                android:layout_marginTop="16dp"
                android:text="anikrakib1998@gmail.com"
                android:textColor="@color/color_primary_text"
                android:textSize="16sp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/id_Email_EditText"
                android:layout_marginTop="16dp"
                android:text="anikrakib1998@gmail.com"
                android:textColor="@color/color_primary_text"
                android:visibility="gone"
                android:textSize="16sp" />
        </LinearLayout>


        <!--  Location   -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_marginTop="18dp"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/id_LocationTitle_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textColor="@color/color_secondary_text"
                android:textSize="12sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/id_Location_TextView"
                android:layout_marginTop="16dp"
                android:text="Cumilla, Bangladesh"
                android:textColor="@color/color_primary_text"
                android:textSize="16sp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/id_Location_EditText"
                android:layout_marginTop="16dp"
                android:text="Cumilla, Bangladesh"
                android:textColor="@color/color_primary_text"
                android:visibility="gone"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>