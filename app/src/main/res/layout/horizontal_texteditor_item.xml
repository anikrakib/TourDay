<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView android:id="@+id/horizontalScrollView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    android:background="@android:color/black"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff">

            <ImageButton
                android:id="@+id/action_undo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:width="40dp"
                android:height="40dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_undo"
                android:textColor="#444444"
                android:textSize="16sp"
                android:textStyle="bold"
                android:contentDescription="@string/todo" />

            <ImageButton
                android:id="@+id/action_redo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:width="40dp"
                android:height="40dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_redo"
                android:contentDescription="@string/todo"
                />

            <Button
                android:id="@+id/action_h1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:width="40dp"
                android:height="40dp"
                android:background="@android:color/transparent"
                android:text="H1"
                android:textColor="#444444"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/action_h2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:width="40dp"
                android:height="40dp"
                android:background="@android:color/transparent"
                android:text="H2"
                android:textColor="#444444"
                android:textSize="19sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/action_h3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:width="40dp"
                android:height="40dp"
                android:background="@android:color/transparent"
                android:text="H3"
                android:textColor="#444444"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/action_h4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:width="40dp"
                android:height="40dp"
                android:background="@android:color/transparent"
                android:text="H4"
                android:textColor="#444444"
                android:textSize="17sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/action_h5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:width="40dp"
                android:height="40dp"
                android:background="@android:color/transparent"
                android:text="H5"
                android:textColor="#444444"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/action_h6"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:width="40dp"
                android:height="40dp"
                android:background="@android:color/transparent"
                android:text="H6"
                android:textColor="#444444"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/action_blockQuote"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:src="@drawable/quote" />


            <ImageButton
                android:id="@+id/action_align_left"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:maxWidth="20dp"
                android:maxHeight="20dp"
                android:src="@drawable/ic_align_left" />

            <ImageButton
                android:id="@+id/action_align_right"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:maxWidth="20dp"
                android:maxHeight="20dp"
                android:src="@drawable/ic_align_right" />

            <ImageButton
                android:id="@+id/action_align_center"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:maxWidth="20dp"
                android:maxHeight="20dp"
                android:src="@drawable/ic_align_center" />


            <ImageButton
                android:id="@+id/action_strikethrough"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:maxWidth="20dp"
                android:maxHeight="20dp"
                android:src="@drawable/ic_strikethrough" />

            <ImageButton
                android:id="@+id/action_insert_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:maxWidth="20dp"
                android:maxHeight="20dp"
                android:src="@drawable/ic_attachment" />


            <ImageButton
                android:id="@+id/action_insert_link"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:maxWidth="20dp"
                android:maxHeight="20dp"
                android:src="@drawable/ic_link" />

            <ImageButton
                android:id="@+id/action_indent"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:maxWidth="20dp"
                android:maxHeight="20dp"
                android:src="@drawable/ic_indent_decrease" />

            <ImageButton
                android:id="@+id/action_outdent"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:maxWidth="20dp"
                android:maxHeight="20dp"
                android:src="@drawable/ic_indent_decrease" />


        </LinearLayout>
    </HorizontalScrollView>

