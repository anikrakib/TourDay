<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="115dp"
    android:layout_marginTop="8dp"
    android:background="@drawable/bg_recat">

    <!-- Title Text -->
    <anikrakib_fonts_material.Regulat_TextView
        android:id="@+id/id_Title_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="6dp"
        android:maxLines="1"
        android:textSize="18dp"
        android:textStyle="bold" />

    <!-- body Text -->
    <anikrakib_fonts_material.Regulat_TextView
        android:id="@+id/id_body_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_Title_TextView"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:textSize="16dp"
        android:layout_marginRight="21dp"
        android:maxLines="2" />

    <!-- Date Text -->
    <anikrakib_fonts_material.Regulat_TextView
        android:id="@+id/id_Date_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="14dp"
        android:layout_marginBottom="2dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="22dp"
        android:layout_marginBottom="2dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:orientation="horizontal">

            <!-- comment icon -->
            <ImageButton
                android:id="@+id/id_comment_ImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/ic_chat" />

            <!-- comment count Text -->
            <anikrakib_fonts_material.Regulat_TextView
                android:id="@+id/id_commentCount_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/id_comment_ImageButton"
                android:layout_toRightOf="@+id/id_comment_ImageButton"
                android:textSize="10sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp">

            <!-- Like Icon -->
            <ImageButton
                android:id="@+id/id_like_ImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/ic_unlike" />

            <!-- Like Count Text -->
            <anikrakib_fonts_material.Regulat_TextView
                android:id="@+id/id_likeCount_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@id/id_like_ImageButton"
                android:layout_toRightOf="@+id/id_like_ImageButton"
                android:textSize="10sp" />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>