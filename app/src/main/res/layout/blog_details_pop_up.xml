<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fafafa"
        android:orientation="vertical"
        >

        <com.github.florent37.shapeofview.shapes.DiagonalView
            android:id="@+id/diagonalLayoutBlogDetailImage"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:elevation="5dip"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shape_arc_height="-50dp"
            app:shape_arc_position="bottom">

            <com.flaviofaria.kenburnsview.KenBurnsView
                android:id="@+id/eventDetailsImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/barishal" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <include
                    layout="@layout/toolbar_blog_details"
                    app:layout_collapseMode="pin"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/eventDetailsTitleTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="40dp"
                    android:layout_marginStart="10dp"
                    android:adjustViewBounds="true"
                    android:text="সাজেক ভ্যালি"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/listItemEventLocationLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="2dp"
                    android:background="@android:color/transparent"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginBottom="25dp"
                    android:adjustViewBounds="true">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="left|center"
                        android:src="@drawable/ic_baseline_location_on_24"
                        app:tint="@color/white"
                        tools:ignore="RtlHardcoded" />

                    <TextView
                        android:id="@+id/eventDetailsLocationTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="14/D,Nurjahan Road , Mohammadpur"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </LinearLayout>


            </FrameLayout>

        </com.github.florent37.shapeofview.shapes.DiagonalView>


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/eventLikeFloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/diagonalLayoutBlogDetailImage"
            android:layout_marginEnd="15dp"
            android:src="@drawable/ic_unlike"
            android:tint="@color/white"
            app:elevation="15dp"
            app:fabSize="normal"
            app:layout_constraintBottom_toBottomOf="@+id/diagonalLayoutBlogDetailImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/diagonalLayoutBlogDetailImage" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_below="@+id/eventLikeFloatingActionButton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/diagonalLayoutBlogDetailImage">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="20dp">



                <com.uncopt.android.widget.text.justify.JustifiedTextView
                    android:id="@+id/blogDetailsDescriptionTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/saejk_valley_blog"
                    android:textColor="@color/color_third_text"
                    android:layout_marginBottom="10dp"
                    android:textSize="16sp" />


                <include
                    layout="@layout/blog_author"
                    app:layout_collapseMode="pin"
                    />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>

